algoritmo "PAR_IMPAR"
var
   A: Inteiro
inicio
   Escreval ("VERIFICADOR NUMÉRICO")
   Escreval ("-----------------------")
   Escreva ("Digite um numero: ")
   Leia (A)
   Se (A%2= 0) entao
      Escreva ("O número ", A, " é par")
   senao
      Escreva ("O número ", A, " é impar")
   FimSe



fimalgoritmo