algoritmo "ParOuImpar"
var
   I: Inteiro
inicio
   Escreval ("PAR OU ÍMPAR")
   Escreval("---------------------")
   Escreva ("Digite um número:")
   Leia (I)
   Se (I % 2 <> 0) entao
      Escreval ("O número ", I, " é impar.")
   Senao
      Escreval("O número ", I, " é par.")
   FimSe
   Escreval("---------------------")
fimalgoritmo